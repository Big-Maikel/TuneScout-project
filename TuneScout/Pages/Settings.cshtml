@page
@model TuneScout.Pages.SettingsModel
@{
    ViewData["Title"] = "Instellingen";
}

<h2>Instellingen</h2>

<form method="post">
    <div class="form-check form-switch mb-3">
        <input class="form-check-input" type="checkbox" asp-for="ViewModel.NoExplicit" id="noExplicitSwitch" />
        <label class="form-check-label" for="noExplicitSwitch">Geen expliciete muziek</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Taalvoorkeur</label>
        <select asp-for="ViewModel.SelectedLanguageId" class="form-select">
            <option value="">Geen voorkeur</option>
            @foreach (var lang in Model.ViewModel.Languages)
            {
                <option value="@lang.Id">@lang.Name</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Genre voorkeur</label>
        <select asp-for="ViewModel.SelectedGenreIds" class="form-select" multiple>
            @foreach (var g in Model.ViewModel.Genres)
            {
                <option value="@g.Id">@g.Name</option>
            }
        </select>
        <small class="form-text text-muted">Houd Ctrl (Windows) of Cmd (Mac) ingedrukt om meerdere items te selecteren.</small>
    </div>

    <div class="mb-3">
        <label class="form-label">Mood voorkeur</label>
        <select asp-for="ViewModel.SelectedMoodIds" class="form-select" multiple>
            @foreach (var m in Model.ViewModel.Moods)
            {
                <option value="@m.Id">@m.Name</option>
            }
        </select>
        <small class="form-text text-muted">Houd Ctrl (Windows) of Cmd (Mac) ingedrukt om meerdere items te selecteren.</small>
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>

    @if (!string.IsNullOrEmpty(Model.ViewModel.Message))
    {
        <div class="mt-3 text-success">@Model.ViewModel.Message</div>
    }
</form>